<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:libbyrator="clr-namespace:Libbyrator"
			 x:Class="Libbyrator.MainPage"
			 x:DataType="libbyrator:MainPage">

	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="30"
			VerticalOptions="Center">

			<Label Text="Connected device"/>

			<Entry Text="{Binding Path=TargetDirectoryPath}"/>

			<Button Text="Copy files to Computer"/>

			<CollectionView>

			</CollectionView>

			<Button Text=""/>

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>